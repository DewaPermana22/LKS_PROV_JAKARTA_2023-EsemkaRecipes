<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRecipes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:padding="12dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24"/>
        <TextView
            android:id="@+id/Judul_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name Menu"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_Menu"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/crispy_chickpeas"/>
            <TextView
                android:id="@+id/nameMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name menu"
                android:textSize="25sp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Information"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-condensed-medium"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_time"/>
                    <TextView
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooking Time Estimate :"/>
                    <TextView
                        android:id="@+id/estimate_time"
                        android:textSize="15sp"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooking Time Estimate :"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_price"/>
                    <TextView
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Estimate :"/>
                    <TextView
                        android:id="@+id/price_estimate"
                        android:textSize="15sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Estimate :"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="17sp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"/>
                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/img_categories"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_time"/>
                        <TextView
                            android:textSize="15sp"
                            android:id="@+id/name_categories"
                            android:layout_marginStart="7dp"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name Categories"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Description"
                        android:textSize="17sp" />
                    <TextView
                        android:id="@+id/des_menu"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:text="Description menu form API"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="19dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="17sp"
                    android:layout_gravity="center"
                    android:textColor="@color/yellow"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"/>

                <TextView
                    android:layout_marginTop="14dp"
                    android:id="@+id/ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:text="list item ingredients"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"/>
                <TextView
                    android:layout_marginTop="19dp"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:textColor="@color/yellow"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps"/>
                <TextView
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="14dp"
                    android:id="@+id/steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:text="list item steps"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-condensed-medium"/>
                <ImageView
                    android:layout_marginBottom="19dp"
                    android:id="@+id/isLike"
                    android:layout_marginTop="19dp"
                    android:layout_gravity="center"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/like"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>